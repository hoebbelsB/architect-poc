{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "scope:shared",
                "onlyDependOnLibsWithTags": ["scope:shared"]
              },
              {
                "sourceTag": "scope:dashboards",
                "onlyDependOnLibsWithTags": ["scope:dashboards", "scope:shared"]
              },
              {
                "sourceTag": "scope:settings",
                "onlyDependOnLibsWithTags": ["scope:settings", "scope:shared"]
              },
              {
                "sourceTag": "scope:sidebar",
                "onlyDependOnLibsWithTags": ["scope:sidebar", "scope:shared"]
              },
              {
                "sourceTag": "scope:spaces",
                "onlyDependOnLibsWithTags": ["scope:spaces", "scope:shared"]
              },
              {
                "sourceTag": "type:ui",
                "onlyDependOnLibsWithTags": ["type:use-cases", "type:domain"]
              },
              {
                "sourceTag": "type:use-cases",
                "onlyDependOnLibsWithTags": ["type:domain"]
              },
              {
                "sourceTag": "type:data",
                "onlyDependOnLibsWithTags": [
                  "type:domain",
                  "type:interfaces",
                  "type:use-cases"
                ]
              },
              {
                "sourceTag": "type:interfaces",
                "onlyDependOnLibsWithTags": ["type:domain"]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependOnLibsWithTags": ["type:domain"]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
